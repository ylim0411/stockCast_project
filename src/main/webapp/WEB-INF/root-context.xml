<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd">

    <!-- 데이터베이스 이름 및 계정 설정 -->
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <!-- mySQL 드라이버 클래스명 -->
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
        <!-- 접속할 DB url (포트, DB명, 지역과 시간대) -->
        <property name="url" value="jdbc:mysql://localhost:3306/erp_db?useSSL=false&amp;serverTimezone=Asia/Seoul"/>
        <!-- DB 접속 계정 정보 -->
        <property name="username" value="root"/>
        <property name="password" value=""/>
        <!--  맥북 에서 하느라 잠시 바꿈  -->
    </bean>

    <!-- @: select 등 query문을 더 쉽게 쓰기 위해서 마이바티스 사용하는데 이를 설정해줌. 마이바티스가 커넥션풀의 역할을 해줌 -->
    <!-- MyBatis 설정 : sqlSessionFactory -->
    <!-- 파일이 모두 생성되었는지 확인 -->
    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <!-- 위에서 작성한 dataSource 객체를 sqlSessionFactory에 주입 -->
        <property name="dataSource" ref="dataSource"/>
        <!-- MyBatis 설정 파일 위치 (변경해도 되지만 일반적으로(관례적으로) 이렇게 사용 -->
        <property name="configLocation" value ="classpath:/mybatis-config.xml" />
        <!-- Mapper xml 파일 경로 지정 -->
        <property name="mapperLocations" value="classpath*:/mapper/*.xml" />
    </bean>

    <!-- sqlSessionFactory에서 연결 객체 생성 -->
    <bean id="sqlSession" class="org.mybatis.spring.SqlSessionTemplate">
        <constructor-arg name="sqlSessionFactory" ref="sqlSessionFactory" />
    </bean>

</beans>